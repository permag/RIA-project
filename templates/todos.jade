-var hasItems = false

if !isCompleted
	h2 Todos	
	ul
		each todo, i in todos
			if !todo.done
				-hasItems = true
				li
					a(href='#{todo.url}') #{todo.header}
					|  #{todo.date}
else
	h2 Completed Todos
	ul
		each todo, i in todos
			if todo.done
				-hasItems = true
				li
					i
						a(href='#{todo.url}') #{todo.header}
						|  #{todo.date}

